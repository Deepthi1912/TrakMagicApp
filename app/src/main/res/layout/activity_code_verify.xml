<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".CodeVerifyAct">

    <TextView
        android:id="@+id/CV_tv"
        android:layout_width="197dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="37dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="36dp"
        android:text="Reset Password"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#B5B5B5"
        android:textSize="26sp"
        app:layout_constraintBottom_toTopOf="@+id/Cv_DispNumb"
        app:layout_constraintEnd_toStartOf="@+id/imageView3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.56" />

    <ImageView
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:id="@+id/imageView3"
        android:layout_width="55dp"
        android:layout_height="85dp"
        android:layout_marginTop="105dp"
        android:layout_marginEnd="46dp"
        android:layout_marginBottom="26dp"
        app:layout_constraintBottom_toTopOf="@+id/Cv_DispNumb"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/mobileicon" />

    <TextView
        android:id="@+id/Cv_DispNumb"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginBottom="21dp"
        android:text="Enter the security code from the sms to continue...\nCode sent on this: "
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="#999999"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/Cv_codeed"
        app:layout_constraintEnd_toEndOf="@+id/Cv_codeed"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/Cv_codeed"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <EditText
        android:id="@+id/Cv_codeed"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="21dp"
        android:ems="10"
        android:hint="Enter Code"
        android:inputType="phone"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/Cv_Nextbt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Cv_DispNumb" />

    <Button
        android:id="@+id/Cv_Nextbt"
        android:layout_width="120dp"
        android:layout_height="36dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="110dp"
        android:background="#00BCD4"
        android:text="Next"
        android:textAppearance="@style/TextAppearance.AppCompat.Notification.Line2"
        android:textColor="#ffffff"
        app:layout_constraintBottom_toTopOf="@+id/button3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/Cv_ResCodebt"
        app:layout_constraintTop_toBottomOf="@+id/Cv_codeed" />

    <TextView
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginBottom="41dp"
        android:background="#ffffff"
        android:text="Visit Help Center"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Notification.Line2"
        android:textColor="#000000"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Cv_Nextbt" />

    <Button
        android:id="@+id/Cv_ResCodebt"
        android:layout_width="120dp"
        android:layout_height="36dp"
        android:layout_marginStart="8dp"
        android:layout_marginRight="36dp"
        android:layout_marginBottom="100dp"
        android:background="#ffffff"
        android:text="Resend Code"
        android:textAppearance="@style/TextAppearance.AppCompat.Notification.Line2"
        app:layout_constraintBottom_toTopOf="@+id/button3"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintRight_toLeftOf="@+id/Cv_Nextbt"
        app:layout_constraintStart_toStartOf="@+id/Cv_codeed"
        app:layout_constraintTop_toBottomOf="@+id/Cv_codeed"
        app:layout_constraintVertical_bias="0.656" />

</android.support.constraint.ConstraintLayout>