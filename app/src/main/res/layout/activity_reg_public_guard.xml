<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegPublicGuard"
    android:background="@drawable/detailback">




    <TextView
        android:gravity="center_horizontal"
        android:text="Public Guardian Registration"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:textStyle="italic"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/RegPGtitle"

        />


    <EditText
        android:layout_margin="8dp"
        android:textColor="#000000"
        android:background="#ffffff"
        android:hint="First name"
        android:textSize="16dp"
        android:layout_width="170dp"
        android:layout_height="45dp"
        android:layout_below="@+id/RegPGtitle"
        android:layout_marginTop="30dp"
        android:padding="6dp"
        android:id="@+id/inputFName"
        />



    <EditText
        android:layout_margin="8dp"
        android:textColor="#000000"
        android:background="#ffffff"
        android:hint="Last name"
        android:textSize="16dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_toRightOf="@+id/inputFName"
        android:layout_below="@+id/RegPGtitle"
        android:layout_marginTop="30dp"
        android:padding="6dp"
        android:id="@+id/inputLName"
        />


    <EditText
        android:layout_margin="8dp"
        android:textColor="#000000"
        android:background="#ffffff"
        android:hint="Full name"
        android:textSize="16dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/inputLName"
        android:layout_marginTop="30dp"
        android:padding="6dp"
        android:id="@+id/inputFuName"
        />


    <EditText
        android:layout_margin="8dp"
        android:textColor="#000000"
        android:background="#ffffff"
        android:hint="Email id"
        android:textSize="16dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/inputFuName"
        android:layout_marginTop="30dp"
        android:padding="6dp"
        android:id="@+id/inputEmail"
        />

    <EditText
        android:layout_margin="8dp"
        android:textColor="#000000"
        android:background="#ffffff"
        android:hint="Address"
        android:textSize="16dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/inputEmail"
        android:layout_marginTop="30dp"
        android:padding="6dp"
        android:id="@+id/inputAddress"
        />


    <EditText
        android:layout_margin="8dp"
        android:textColor="#000000"
        android:background="#ffffff"
        android:hint="City"
        android:textSize="16dp"
        android:layout_width="170dp"
        android:layout_height="45dp"
        android:layout_below="@+id/inputAddress"
        android:layout_marginTop="30dp"
        android:padding="6dp"
        android:id="@+id/inputCity"
        />



    <EditText
        android:layout_margin="8dp"
        android:textColor="#000000"
        android:background="#ffffff"
        android:hint="Postal Code"
        android:textSize="16dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/inputAddress"
        android:layout_toRightOf="@+id/inputCity"
        android:layout_marginTop="30dp"
        android:padding="6dp"
        android:id="@+id/inputPCode"
        />


    <EditText
        android:layout_margin="8dp"
        android:textColor="#000000"
        android:background="#ffffff"
        android:hint="State"
        android:textSize="16dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/inputCity"
        android:layout_marginTop="30dp"
        android:padding="6dp"
        android:id="@+id/inputState"
        />



    <Button
        android:text="Register"
        android:textSize="16dp"
        android:background="#33CCFF"
        android:textColor="#ffffff"
        android:padding="10dp"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_below="@id/inputState"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/RegPGBt"
        />


    <Button
        android:text="Cancel"
        android:textSize="16dp"
        android:background="#33CCFF"
        android:textColor="#ffffff"
        android:padding="10dp"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_below="@id/RegPGBt"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/cancelPGReg"
        />








</RelativeLayout>