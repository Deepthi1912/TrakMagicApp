<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectedUserProjects"
    android:background="@drawable/detailback">



    <TextView
        android:id="@+id/listLabeltxt"
        android:textStyle="italic"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"
        android:textSize="25dp"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Project List"/>



    <TextView
        android:textSize="16dp"
        android:layout_margin="5dp"
        android:id="@+id/UserProCurrentLabel"
        android:layout_below="@id/listLabeltxt"
        android:textColor="#ffffff"
        android:text="Current Project: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:text="Not Working"
        android:id="@+id/userCurrentProTxt"
        android:textSize="16dp"
        android:textColor="#FF0000"
        android:layout_margin="5dp"
        android:layout_below="@id/listLabeltxt"
        android:layout_toRightOf="@+id/UserProCurrentLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>





    <TextView
        android:gravity="center"
        android:id="@+id/UserProHistoryLable"
        android:layout_margin="5dp"
        android:layout_below="@id/UserProCurrentLabel"
        android:textSize="16dp"
        android:textColor="#ffffff"
        android:text="Project History"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



    <View
        android:layout_below="@id/userCurrentProTxt"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#c0c0c0"/>




    <ListView
        android:layout_margin="5dp"
        android:id="@+id/ProListV"
        android:layout_below="@+id/UserProHistoryLable"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@drawable/rowline"
        android:dividerHeight="2dp"></ListView>



</RelativeLayout>