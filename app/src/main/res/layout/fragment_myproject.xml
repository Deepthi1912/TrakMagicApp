<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.MyProjectFragment"
    android:background="@drawable/detailback">

    <!-- TODO: Update blank fragment layout -->


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



    <RelativeLayout
        android:id="@+id/startNewProRL"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/buttoncorner">


        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:id="@+id/stproimg"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/addplus"/>

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start a new project"
            android:textColor="#ffffff"
            android:textSize="22dp"
            android:layout_centerInParent="true"/>


    </RelativeLayout>


    <ListView
        android:layout_below="@+id/startNewProRL"
        android:id="@+id/myProListview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@android:color/transparent"
        android:dividerHeight="8dp"></ListView>



    </RelativeLayout>


</FrameLayout>